.fishshop {
  width: 750rpx;
  height: 90vh;
}
.center {
  padding: 20rpx;
  width: 580rpx;
  border-radius: 1em;
  margin: auto;
  height: 200rpx;
  background: #7585FE;
  text-align: center;
}
.center text {
  display: block;
  color: #C8CDE9;
  font-size: 1.5em;
  margin-top: .2em;
  font-weight: bold;
}
.center > text:nth-child(2) {
  font-size: 1.8em;
  margin-top: .8em;
  font-weight: bold;
}
.fkshop {
  position: fixed;
  bottom: 0;
  height: 3rem;
  background: #7284FD;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.fkshop .left {
  color: #FF4238;
  font-size: 1em;
  margin-left: 2em;
  font-weight: bold;
  width: 60%;
}
.fkshop .right {
  background: #FE5A37;
  color: #FFFFFF;
  width: 30%;
  height: 100%;
  font-size: 1.5em;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
}

